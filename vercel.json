{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "memory": 3008,
        "maxDuration": 30
      }
    }
  ],
  "functions": {
    "server/**": {
      "memory": 3008,
      "maxDuration": 30,
      "excludeFiles": "**/{client,dist/client,node_modules/{@types,typescript,vite,@rollup,esbuild,react*,@radix-ui,framer-motion,recharts,lucide-react,@tanstack}}/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
