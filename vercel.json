{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "memory": 3008,
        "maxDuration": 30
      }
    }
  ],
  "functions": {
    "server/**": {
      "memory": 3008,
      "maxDuration": 30,
      "excludeFiles": "**/{client,dist/client,node_modules/@types,node_modules/typescript,node_modules/vite,node_modules/rollup,node_modules/@rollup,node_modules/esbuild,node_modules/@esbuild,node_modules/react,node_modules/react-dom,node_modules/@radix-ui,node_modules/framer-motion,node_modules/recharts,node_modules/lucide-react,node_modules/@tanstack}/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
